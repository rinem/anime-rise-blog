<%- include ('partials/header') %>

<div class="ui main text container segment">
    <div class="ui huge header center aligned"><%= blog.title %></div>
    <div class="ui top attached gi">
        <div class="item">
            <img src="<%= blog.image%>" class="ui centered rounded image">
            <div class="content">
                <span><%= blog.created.toDateString() %></span>    
            </div>
            <div class="description">
                <p><%= blog.body %></p>
            </div>
            <a class = "ui orange basic button" href="/<%=blog._id%>/edit">Edit</a>
            <form action="/<%= blog._id %>?_method=DELETE" id="delete" method="POST">
                <button class="ui red basic button">Delete</button>
            </form>
        </div>
    </div>
</div>

<%- include ('partials/footer') %>