<%- include ('partials/header') %>

<div class="ui main text container segment">
    <div class="ui huge header center aligned">New Post</div>
    <form class="ui form" action="/" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name = "blog[title]" name = "title" placeholder="Post Title">
        </div>
        <div class="field">
            <label>Image Link</label>
            <input type="text" name = "blog[image]" placeholder="Image Link">
        </div>
        <div class="field">
            <label>Blog Post</label>
            <textarea name="blog[body]"></textarea>
        </div>
        
        <input class="ui red basic button" type="submit">
    </form>
</div>

