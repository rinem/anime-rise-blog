<%- include ('partials/header') %>

<div class="ui main text container segment">
    <div class="ui huge header center aligned">Edit Post</div>
    <form class="ui form" action="/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name = "blog[title]" placeholder="Post Title" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label>Image Link</label>
            <input type="text" name = "blog[image]" placeholder="Image Link" value="<%=blog.image%>">
        </div>
        <div class="field">
            <label>Blog Post</label>
            <textarea name="blog[body]"><%=blog.body%></textarea>
        </div>
        
        <input class="ui red basic button" type="submit">
    </form>
</div>

<%- include ('partials/footer') %>